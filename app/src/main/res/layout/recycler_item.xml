<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    style="@style/AppTheme"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        card_view:srcCompat="@drawable/yacht" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="0dp"
        android:background="@color/colorPrimaryTransparent"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/deallocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="locationname" />

        <TextView
            android:id="@+id/dealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:autoText="false"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text="Deal Name"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dealdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dealname"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/dealname"
            android:fontFamily="@font/roboto_thin"
            android:includeFontPadding="true"
            android:text="DealDistance" />
    </RelativeLayout>

</android.support.v7.widget.CardView>